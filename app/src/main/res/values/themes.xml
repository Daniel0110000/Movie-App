<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ghost_white</item>
        <item name="colorPrimaryVariant">@color/gainsboro</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/cinder</item>
        <item name="android:windowBackground">@color/ghost_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dodger_blue</item>
        <item name="colorSecondaryVariant">@color/cinder</item>
        <item name="colorOnSecondary">@color/ghost_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>