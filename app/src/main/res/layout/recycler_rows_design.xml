<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:padding="4dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bottom_navigation_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/movie_name" />

    <androidx.cardview.widget.CardView
        android:id="@+id/image_movie_layout"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_movie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/movie_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:paddingTop="8dp"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_movie_layout"
        app:layout_constraintTop_toTopOf="@id/image_movie_layout"
        tools:text="Mr Robot" />

    <TextView
        android:id="@+id/network_movie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:includeFontPadding="false"
        android:paddingTop="3dp"
        android:textColor="#F4D03F"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="@id/movie_name"
        app:layout_constraintStart_toStartOf="@id/movie_name"
        app:layout_constraintTop_toBottomOf="@id/movie_name"
        tools:text="HBO (US)" />

    <TextView
        android:id="@+id/started_movie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:includeFontPadding="false"
        android:paddingTop="3dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/network_movie"
        app:layout_constraintStart_toStartOf="@id/network_movie"
        app:layout_constraintTop_toBottomOf="@id/network_movie"
        tools:text="Started: 2014" />

    <TextView
        android:id="@+id/status_movie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:includeFontPadding="false"
        android:paddingTop="3dp"
        android:paddingBottom="10dp"
        android:textColor="#2ECC71"
        android:textSize="12sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="@id/movie_name"
        app:layout_constraintStart_toStartOf="@id/movie_name"
        app:layout_constraintTop_toBottomOf="@id/started_movie"
        tools:text="Running" />


</androidx.constraintlayout.widget.ConstraintLayout>