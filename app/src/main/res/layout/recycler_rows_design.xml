<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginStart="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/image_movie_layout"
        android:layout_width="130dp"
        android:layout_height="170dp"
        android:backgroundTint="@color/mirage"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_movie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/image_movie"
            android:scaleType="fitXY" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/movie_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="@id/image_movie_layout"
        app:layout_constraintStart_toStartOf="@id/image_movie_layout"
        app:layout_constraintTop_toBottomOf="@id/image_movie_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>